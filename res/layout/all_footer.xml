<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/maintab_toolbar_bg"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/main_tab_wxlayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/wx_imgv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/tab_selector_2" >
                </ImageView>

                <TextView
                    android:id="@+id/wx_textview"
                    style="@style/tab_rb_style"
                    android:text="资讯" >
                </TextView>
            </LinearLayout>

            <TextView
                style="@style/tab_msgnum_style"
                android:layout_gravity="top|center"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/main_tab_txllayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/txl_imgv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/tab_selector_3" >
                </ImageView>

                <TextView
                    android:id="@+id/txl_textview"
                    style="@style/tab_rb_style"
                    android:text="通讯录" >
                </TextView>
            </LinearLayout>

            <TextView
                style="@style/tab_msgnum_style"
                android:layout_gravity="top|center"
                android:layout_marginLeft="10dp"
                android:text="12" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/main_tab_fxlayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/fx_imgv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/tab_selector_4" >
                </ImageView>

                <TextView
                    android:id="@+id/fx_textview"
                    style="@style/tab_rb_style"
                    android:text="发现" >
                </TextView>
            </LinearLayout>

            <TextView
                style="@style/tab_msgnum_style"
                android:layout_gravity="top|center"
                android:layout_marginLeft="10dp"
                android:text="12" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/main_tab_wolayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/wo_imgv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/tab_selector_1" >
                </ImageView>

                <TextView
                    android:id="@+id/wo_textview"
                    style="@style/tab_rb_style"
                    android:text="我" >
                </TextView>
            </LinearLayout>

            <TextView
                style="@style/tab_msgnum_style"
                android:layout_gravity="top|center"
                android:layout_marginLeft="10dp"
                android:text="12" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>